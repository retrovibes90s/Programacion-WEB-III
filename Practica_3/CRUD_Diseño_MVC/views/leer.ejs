                      console.log(elem.precio)
                      document.getElementById("nombre").innerHTML = elem.nombre;                  
                      document.getElementById("precio").innerHTML = elem.precio; 
                      document.getElementById("stock").innerHTML = elem.stock; 
                      document.getElementById("img").src = "http://localhost:3000/uploads/" + elem.img; 
                    });
                
            
            };

            }
        ).catch(err => console.error(err));

      
