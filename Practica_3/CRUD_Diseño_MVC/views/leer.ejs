    <script type="text/javascript"> 

        var url = new URL(window.location.href);
        const id = url.searchParams.get("id");

        fetch("http://localhost:3000/api/v1/productos/"+ id).then(response => {
            if(response.ok) {
                return response.json();
            }
        }).then(data => {
            if(data) {
                console.log(data); 

                const ar = data; 
                    
